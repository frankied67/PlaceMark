<form class="box" action="/playlist/{{playlist._id}}/addtrack" method="POST">
  <label>Enter Track Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Monument Name" name="title">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Town" name="artist">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Latitude" name="latitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Longitude" name="longitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Category" name="category>"
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Track</button>
</form>